// contrast checks
check-contrast-ratio(iden, top, bottom)
  ratio = contrast(top, bottom).ratio

  if ratio < 7
    warn('----------------')
    warn(iden)
    warn('contrast is < 7')

  if ratio > 17
    warn('----------------')
    warn('contrast is > 17')

