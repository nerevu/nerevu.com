#topnav
  @media $laptop
    nav(8, $nav-background, $nav-link-color)

  background $nav-background
  height auto !important
  overflow hidden

  ul li a:hover
    color $nav-active-color

  h1
    margin 0
    padding-left 0

  a.active
    color $nav-active-color

  img
    margin $burger-spacing 0

    @media $mobile
      width 180px
      margin 1em 0

#mobile-navbar
  a
    float left
    line-height 0
    padding 0

  .mobile-nav
    float right

#navbar
  @media $handheld
    .nav-list
      reset-list()
      border-top 1px solid $background
      padding $half-headspace 0
      li
        text-align center
  @media $laptop
    .nav-list
      border-top 0
      float: right

      li
        text-align center
        list-style-type: none
        margin-right: 30px
        float: left
